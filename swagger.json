{
    "openapi": "3.0.0",
    "info": {
      "title": "API de Formulário de Contato",
      "description": "API para envio de formulário de contato com validação de ReCaptcha e envio de emails.",
      "version": "1.0.0"
    },
    "paths": {
      "/contact": {
        "post": {
          "summary": "Enviar formulário de contato",
          "description": "Envia os dados do formulário de contato e verifica o ReCaptcha.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "g-recaptcha-response": {
                      "type": "string",
                      "description": "Resposta correta do captcha. Para testes, use o valor `valid-captcha-token`.",
                      "example": "valid-captcha-token"
                    },
                    "comment": {
                      "type": "string",
                      "description": "Comentário do usuário"
                    },
                    "name": {
                      "type": "string",
                      "description": "Nome do usuário"
                    },
                    "mail": {
                      "type": "string",
                      "description": "Email do usuário",
                      "example": "my.name@example.com"
                    }
                  },
                  "required": ["g-recaptcha-response", "comment", "name", "mail"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Formulário enviado com sucesso. Não há resposta no corpo da requisição."
            },
            "400": {
              "description": "Erro de validação de dados do usuário.",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/BadRequestError"
                  }
                }
              }
            },
            "401": {
              "description": "Erro de validação de captcha.",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/UnauthorizedError"
                  }
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor.",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/InternalServerError"
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "BadRequestError": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "example": "about:blank"
            },
            "title": {
              "type": "string",
              "example": "BadRequestError"
            },
            "detail": {
              "type": "string",
              "example": "The email is invalid"
            },
            "instance": {
              "type": "string",
              "example": "/api-endpoint"
            }
          }
        },
        "UnauthorizedError": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "example": "about:blank"
            },
            "title": {
              "type": "string",
              "example": "UnauthorizedError"
            },
            "detail": {
              "type": "string",
              "example": "The captcha is incorrect!"
            },
            "instance": {
              "type": "string",
              "example": "/api-endpoint"
            }
          }
        },
        "InternalServerError": {
          "type": "object",
          "properties": {
          "type": {
            "type": "string",
            "example": "about:blank"
          },
          "title": {
            "type": "string",
            "example": "InternalServerError"
          },
          "detail": {
            "type": "string",
            "example": "Some generic error name."
          },
        "instance": {
            "type": "string",
            "example": "/api-endpoint"
          }
        }
      }
    }
  }
}
  